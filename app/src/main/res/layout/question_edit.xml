<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/questionEditRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="15dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:text="Editovanie otázky"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="* pole je povinné"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="Nadpis *"
            android:textStyle="bold"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/questionTitleEditET"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="textPersonName"  />
        <TextView
            android:id="@+id/titleErrorMessageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone"
            android:textColor="@android:color/holo_red_dark" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Obsah *"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/questionBodyEditET"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="textPersonName"  />

        <Button
            android:id="@+id/questionEditBtn"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_marginTop="100dp"
            android:paddingVertical="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Upraviť" />

    </LinearLayout>
</ScrollView>